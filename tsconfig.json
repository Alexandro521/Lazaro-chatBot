
{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
   "strictNullChecks": false,
    "noImplicitAny": false,
    "strict": false,
    "esModuleInterop": true,
   
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types"]    
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"] 
}
 