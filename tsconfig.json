{
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "target": "ESNext",
    "module": "ESNext",
    "types": [
      "bun-types"
    ],
    //"moduleDetection": "force",
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strict": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": false,
    
    "noEmit": true,
    "paths": {
      "@config/":["./src/config/"],
      "@functions/":["./src/functions/"],
      "@interfaces/":["./src/interfaces/"],
      "@data/":["./src/data/"],
      "@json/":["./src/data/json/"],
      "@DB/":["./src/DB/"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "test.mjs"
  ]
}